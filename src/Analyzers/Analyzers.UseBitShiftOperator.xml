<?xml version="1.0" encoding="utf-8"?>
<Analyzers>
  <Analyzer Identifier="UseBitShiftOperator" IsDevelopment="true">
    <Id>RCS1244</Id>
    <Title>Use bit shift operator.</Title>
    <MessageFormat>Use bit shift operator.</MessageFormat>
    <Category>Usage</Category>
    <DefaultSeverity>Hidden</DefaultSeverity>
    <IsEnabledByDefault>true</IsEnabledByDefault>
    <SupportsFadeOut>false</SupportsFadeOut>
    <SupportsFadeOutAnalyzer>false</SupportsFadeOutAnalyzer>
    <MinLanguageVersion></MinLanguageVersion>
    <Summary></Summary>
    <Samples>
      <Sample>
        <Before><![CDATA[[Flags]
enum Foo // [|Id|]
{
    None = 0,
    Alpha = 1,
    Beta = 2,
    Gamma = 4,
}]]></Before>
        <After><![CDATA[[Flags]
enum Foo
{
    None = 0,
    Alpha = 1,
    Beta = 1 << 1,
    Gamma = 1 << 2,
}]]></After>
      </Sample>
    </Samples>
    <Remarks></Remarks>
    <Links>
      <Link>
        <Url></Url>
        <Text></Text>
      </Link>
    </Links>
  </Analyzer>
</Analyzers>