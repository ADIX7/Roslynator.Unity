<?xml version="1.0" encoding="utf-8"?>
<Analyzers>
  <Analyzer Identifier="AvoidNestedConditionalExpressions" IsDevelopment="true">
    <Id>RCS1238</Id>
    <Title>Avoid nested conditional expressions.</Title>
    <MessageFormat>Avoid nested conditional expressions.</MessageFormat>
    <Category>Readability</Category>
    <DefaultSeverity>Hidden</DefaultSeverity>
    <IsEnabledByDefault>true</IsEnabledByDefault>
    <SupportsFadeOut>false</SupportsFadeOut>
    <SupportsFadeOutAnalyzer>false</SupportsFadeOutAnalyzer>
    <Samples>
      <Sample>
        <Before><![CDATA[var x = (a) ? "a" : (b) ? "b" : "c";]]></Before>
        <After><![CDATA[var x;
if (a)
{
    x = "a";
}
else if (b)
{
    x = "b";
}
else
{
    x = "c";
}]]></After>
      </Sample>
    </Samples>
  </Analyzer>
</Analyzers>